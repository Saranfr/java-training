import java.util.*;
public class Main
{
	public static void main(String[] args) { //login system to validate user cred 
		String nstr = "Lionel Messi";
		String pstr = "Worldcup winner";
		Scanner input = new Scanner(System.in);
		System.out.println("LOGIN PAGE");
		System.out.println("Enter the user name: ");
		String un = input.nextLine();
		if(un.equalsIgnoreCase(nstr)){
		    System.out.println("Enter the password: ");
		    String pass = input.nextLine();
		    String pt = pass.trim();
		    if(pstr.equals(pt)){
		        System.out.println("You have been logged in successfully!!");
		    }
		    else{
		        System.out.println("Wrong Password. Try again!");
		    }
		}
		else{
		    System.out.println("Wrong Username");
		}
	}
	
}
//to develop a login system and nee to validate the user cred. you can use string methods like trim,equals and equalsIgnoreCase
