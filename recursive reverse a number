public class Main
{
    static int sum=0;
    public static int reverse(int n){
        if(n==0){
            return 0;
        }
        int temp = n%10;
        sum = sum*10+temp;
        reverse(n/10);
        return  sum;
    }
	public static void main(String[] args) {
	        int number = 75;
	        System.out.println("the reverse of 75 is:"+reverse(number));
	}
}
